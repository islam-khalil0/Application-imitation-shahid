<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_500">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical"
            >


            <ImageView
                android:id="@+id/background_movie"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/move1"
                >
            </ImageView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:src="@drawable/d_g"
                android:layout_marginTop="-80dp">

            </ImageView>



            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floatingActionButton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                app:srcCompat="@android:drawable/ic_media_play"
                android:layout_marginTop="-170dp"
                android:layout_marginLeft="168dp"
                />

        </LinearLayout>



        <ImageView
            android:transitionName="sharedName"
            android:layout_width="150dp"
            android:layout_height="210dp"
            android:scaleType="centerCrop"
            android:src="@drawable/r_v_1"
            android:id="@+id/details_movie"
            android:layout_marginTop="-120dp"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="20dp">

        </ImageView>



        <TextView
            android:id="@+id/name_movie"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="MEMORY"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginTop="-90dp"
            android:layout_marginLeft="180dp"
            >

        </TextView>


        <TextView
            android:id="@+id/description_movie"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:lineSpacingExtra="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="85dp"
            android:textColor="@color/white"
            android:text="@string/sample_text">

        </TextView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="20dp"
            android:text="   actors"
            android:textColor="@color/white"
            android:background="@color/text_bg"
            android:textSize="18sp"
            android:textStyle="bold">

        </TextView>



        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/actors_rv">

        </androidx.recyclerview.widget.RecyclerView>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="20dp"
            android:text="   other"
            android:textColor="@color/white"
            android:background="@color/text_bg"
            android:textSize="18sp"
            android:textStyle="bold">

        </TextView>


        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/recyclerView_other">

        </androidx.recyclerview.widget.RecyclerView>



    </LinearLayout>




</androidx.core.widget.NestedScrollView>